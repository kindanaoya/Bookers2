<div class = "container">
  <div class = "row">
    <%= render 'list', book: @book %>
    <div class = "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class = "table">
        <tbody>
          <tr>
            <td>
              <%= link_to new_book_path do %>
                <%= image_tag @book.get_image %><br>
                <%= current_user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %> </td>
            <td><%= link_to "Destroy", book_path, method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger" %> </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

